name = 'Jason Bes'
age = 43 # not a lie
height_cm = 185
height = height_cm * 0.3
weight_kg = 100
weight = 100 * 2.2 # 10% of a ton
eyes = 'nuts'
teeth ='yellow'
hair = 'chestnut'

print "Let's talk about %s." %name 
print "He's {} inches tall." .format(height)
print "He's %d pounds heavy." %weight
print "He's got %r eyes and %s hairs" %(eyes, hair)
print "His teeth are usually %s depending on the coffee." %teeth
print "if I add {}, {}, and {} I get {} ." .format(age, height, weight, age + weight + height)
